<div class="jumbotron">
<h2>Inicia Sesión</h2>
<%= form_for(:user_session, :url => user_session_url, html: {class: 'form'}) do |f| %>
    <div class="form-group">
      <%= f.label :login, "Usuario" %>
      <%= f.text_field :login, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password, "Contraseña" %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>

  <%= f.submit "Inicia Sesión", :class => "btn btn-success" %>

<% end %>
</div>